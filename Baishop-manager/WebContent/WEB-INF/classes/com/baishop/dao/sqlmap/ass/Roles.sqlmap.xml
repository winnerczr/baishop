<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd" >
<sqlMap namespace="Roles" >

  <resultMap id="resultMap" class="com.baishop.entity.ass.Roles" >
    <result column="role_id" property="roleId" jdbcType="INTEGER" />
    <result column="role_pid" property="rolePid" jdbcType="INTEGER" />
    <result column="role_name" property="roleName" jdbcType="VARCHAR" />
    <result column="role_type" property="roleType" jdbcType="VARCHAR" />
    <result column="role_desc" property="roleDesc" jdbcType="VARCHAR" />
    <result column="sort" property="sort" jdbcType="INTEGER" />
    <result column="leaf" property="leaf" jdbcType="TINYINT" />
    <result column="{roleId=role_id}" property="modules" select="Modules.getModules" />
  </resultMap>
  
  <cacheModel id="cacheRoles" type="MEMORY" readOnly="true" serialize="false">
  	<flushInterval hours="24"/>
  	<flushOnExecute statement="Roles.addRoles"/>
  	<flushOnExecute statement="Roles.editRoles"/>
  	<flushOnExecute statement="Roles.delRoles"/>
  	<flushOnExecute statement="Modules.addModules"/>
  	<flushOnExecute statement="Modules.editModules"/>
  	<flushOnExecute statement="Modules.delModules"/>
  	<flushOnExecute statement="AdminsRoles.addAdminsRoles"/>
  	<flushOnExecute statement="AdminsRoles.delAdminsRoles"/>
  	<flushOnExecute statement="RolesModules.addRolesModules"/>
  	<flushOnExecute statement="RolesModules.delRolesModules"/>
  	<property name="reference-type" value="SOFT"/>
  </cacheModel>
  
  <select id="getRoles" resultMap="resultMap" cacheModel="cacheRoles">
    select role_id, role_pid, role_name, role_type, role_desc, sort, leaf
    from bai_roles
    <dynamic prepend="where">
		<isNotEmpty prepend="AND" property="roleId">
			role_id = #roleId:INTEGER#
		</isNotEmpty>
		<isNotEmpty prepend="AND" property="rolePid">
			role_pid = #rolePid:INTEGER#
		</isNotEmpty>
		<isNotEmpty prepend="AND" property="roleName">
			role_name = #role_name:VARCHAR#
		</isNotEmpty>
		<isNotEmpty prepend="AND" property="leaf">
			leaf = #leaf:TINYINT#
		</isNotEmpty>
		<isNotEmpty prepend="AND" property="userId">
			role_id in (select role_id from bai_admins_roles where user_id = #userId:INTEGER#)
		</isNotEmpty>
		<isNotEmpty prepend="AND" property="moduleId">
			role_id in (select role_id from bai_roles_modules where module_id = #moduleId:INTEGER#)
		</isNotEmpty>
	</dynamic>
	<dynamic prepend="order by" >
      <isNotEmpty property="sort" >
        $sort$
      </isNotEmpty>
	  <isEmpty property="sort" >
	    sort asc
	  </isEmpty>
    </dynamic>
  </select>
  
  <delete id="delRoles" >
    delete from bai_roles
    where role_id in
	<iterate property="roleIds" open="(" close=")" conjunction=",">
		#roleIds[]:INTEGER# 
	</iterate>
  </delete>
  
  <insert id="addRoles" parameterClass="com.baishop.entity.ass.Roles" >
    insert into bai_roles
    <dynamic prepend="(" >
      <isNotNull prepend="," property="rolePid" >
        role_pid
      </isNotNull>
      <isNotNull prepend="," property="roleName" >
        role_name
      </isNotNull>
      <isNotNull prepend="," property="roleType" >
        role_type
      </isNotNull>
      <isNotNull prepend="," property="roleDesc" >
        role_desc
      </isNotNull>
      <isNotNull prepend="," property="sort" >
        sort
      </isNotNull>
      <isNotNull prepend="," property="leaf" >
        leaf
      </isNotNull>
      )
    </dynamic>
    values
    <dynamic prepend="(" >
      <isNotNull prepend="," property="rolePid" >
        #rolePid:VARCHAR#
      </isNotNull>
      <isNotNull prepend="," property="roleName" >
        #roleName:VARCHAR#
      </isNotNull>
      <isNotNull prepend="," property="roleType" >
        #roleType:VARCHAR#
      </isNotNull>
      <isNotNull prepend="," property="roleDesc" >
        #roleDesc:VARCHAR#
      </isNotNull>
      <isNotNull prepend="," property="sort" >
        #sort:INTEGER#
      </isNotNull>
      <isNotNull prepend="," property="leaf" >
        #leaf:TINYINT#
      </isNotNull>
      )
    </dynamic>
    <selectKey resultClass="java.lang.Integer" keyProperty="roleId" >
      SELECT LAST_INSERT_ID()
    </selectKey>
  </insert>
  
  <update id="editRoles" parameterClass="com.baishop.entity.ass.Roles" >
    update bai_roles
    <dynamic prepend="set" >
      <isNotNull prepend="," property="rolePid" >
        role_pid = #rolePid:INTEGER#
      </isNotNull>
      <isNotNull prepend="," property="roleName" >
        role_name = #roleName:VARCHAR#
      </isNotNull>
      <isNotNull prepend="," property="roleType" >
        role_type = #roleType:VARCHAR#
      </isNotNull>
      <isNotNull prepend="," property="roleDesc" >
        role_desc = #roleDesc:VARCHAR#
      </isNotNull>
      <isNotNull prepend="," property="sort" >
        sort = #sort:INTEGER#
      </isNotNull>
      <isNotNull prepend="," property="leaf" >
        leaf = #leaf:TINYINT#
      </isNotNull>
    </dynamic>
    where role_id = #roleId:INTEGER#
  </update>
  
</sqlMap>