<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd" >
<sqlMap namespace="RolesModules" >

  <delete id="delRolesModules" parameterClass="hashmap">
    delete from bai_roles_modules
    where 1=0
   	<dynamic prepend="or">
		<isNotEmpty prepend="AND" property="roleIds">
			role_id in
			<iterate property="roleIds" open="(" close=")" conjunction=",">
				#roleIds[]:INTEGER# 
			</iterate>
		</isNotEmpty>
		<isNotEmpty prepend="AND" property="moduleIds">
		    module_id in
			<iterate property="moduleIds" open="(" close=")" conjunction=",">
				#moduleIds[]:INTEGER# 
			</iterate>
		</isNotEmpty>
	</dynamic>
  </delete>
  
  <insert id="addRolesModules" parameterClass="com.baishop.entity.ass.RolesModules" >
    insert into bai_roles_modules
    <dynamic prepend="(" >
      <isNotNull prepend="," property="roleId" >
        role_id
      </isNotNull>
      <isNotNull prepend="," property="moduleId" >
        module_id
      </isNotNull>
      )
    </dynamic>
    values
    <dynamic prepend="(" >
      <isNotNull prepend="," property="roleId" >
        #roleId:INTEGER#
      </isNotNull>
      <isNotNull prepend="," property="moduleId" >
        #moduleId:INTEGER#
      </isNotNull>
      )
    </dynamic>
    <selectKey resultClass="java.lang.Integer" keyProperty="roleId" >
      SELECT LAST_INSERT_ID()
    </selectKey>
  </insert>

</sqlMap>